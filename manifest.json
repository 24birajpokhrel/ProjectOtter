{
  "manifest_version": 3,

  "name"        : "AccessiLens â€“ Visual Accessibility",
  "short_name"  : "AccessiLens",
  "version"     : "1.0.0",
  "description" : "Color overlays, dark mode, colorblindness filters, and focus reading tools for students with dyslexia, ADHD, and color vision deficiency.",

  "icons": {
    "16"  : "assets/icons/icon16.png",
    "48"  : "assets/icons/icon48.png",
    "128" : "assets/icons/icon128.png"
  },

  "action": {
    "default_popup" : "popup/popup.html",
    "default_title"  : "AccessiLens",
    "default_icon": {
      "16"  : "assets/icons/icon16.png",
      "48"  : "assets/icons/icon48.png",
      "128" : "assets/icons/icon128.png"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches"    : ["<all_urls>"],
      "js"         : [
        "utils/storage-helper.js",
        "content-scripts/focus-ruler.js",
        "content-scripts/typography-engine.js",
        "content-scripts/visual-filters.js"
      ],
      "css"        : [
        "styles/global.css",
        "styles/content.css"
      ],
      "run_at"     : "document_idle",
      "all_frames" : false
    }
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "web_accessible_resources": [
    {
      "resources" : [
        "styles/ruler-shadow.css",
        "styles/global.css",
        "styles/content.css",
        "assets/icons/icon16.png",
        "assets/icons/icon48.png",
        "assets/icons/icon128.png"
      ],
      "matches" : ["<all_urls>"]
    }
  ],

  "commands": {
    "toggle-focus-ruler": {
      "suggested_key": {
        "default" : "Alt+Shift+R",
        "mac"     : "Alt+Shift+R"
      },
      "description": "Toggle Focus Ruler on/off"
    },
    "toggle-color-overlay": {
      "suggested_key": {
        "default" : "Alt+Shift+C",
        "mac"     : "Alt+Shift+C"
      },
      "description": "Toggle color overlay on/off"
    }
  }
}